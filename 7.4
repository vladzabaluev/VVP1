#include <stdio.h>
#include <math.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");
    float v1, v2, s, t;

    printf("Введите скорость первого автомобился\n");
    scanf_s("%f", &v1);
    printf("Введите скорость второго автомобился\n");
    scanf_s("%f", &v2);
    printf("Введите время \n");
    scanf_s("%f", &t);

    s = t * (v1 + v2);
    printf("Расстояние между машинами равно %f \n",s);
    return 0;
}
