#include <stdio.h>
#include <math.h>
#include <locale.h>


int main()
{
    setlocale(LC_ALL, "Rus");
    int n, i, j, t, a;

    printf("Введите N \n");
    scanf_s("%d", &n);

    int* mass = new int[n];
    for (i = 0; i < n; i++)
    {
        printf("Введите элемент массива \n");
        scanf_s("%d", &a);
        mass[i] = a;
    }
    t = mass[0];
    for (i = 1; t > mass[i]; i++) 
    {
        mass[i - 1] = mass[i];
        j = i;
    }
    printf("%d \n", j);
    mass[j] = t;
    for (i = 0; i < n; i++)
    {
        printf("%d ", mass[i]);
    }
}
