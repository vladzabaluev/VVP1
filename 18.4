
#include <stdio.h>
#include <math.h>
#include <locale.h>


int main()
{
    setlocale(LC_ALL, "Rus");
    int n, i, j, t, min, max, a;

    printf("Введите N \n");
    scanf_s("%d", &n);

    int* mass1 = new int[n];
    for (i = 0; i < n; i++)
    {
        printf("Введите элемент массива \n");
        scanf_s("%d", &a);
        mass1[i] = a;
    }
    min = mass1[0];
    j = 0;
    max = mass1[2];
    t = 2;
    for (i = 0; i < n; i++)
    {
        if (mass1[i] < min)
        {
            min = mass1[i];
            j = i;
        }
        if (mass1[i] > max)
        {
            max = mass1[i];
            t = i;
        }
    }
    printf("MAX %d\n", max);
    printf("MIN %d\n", min);
    if (t > j) 
    {
        for (j=j+1; j < t; j++) 
        {
            mass1[j] = 0;
        }
    }
    else 
    {
        for (t=t+1; t < j; t++)
        {
            mass1[t] = 0;
        }
    }
    for (i = 0; i < n; i++)
    {
        printf("%d ", mass1[i]);
    }
}
