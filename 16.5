#include <stdio.h>
#include <math.h>
#include <locale.h>
#include <stdlib.h> 
#include <ctime> 

int main()
{
    setlocale(LC_ALL, "Rus");
    int n, i, j;
    srand(time(NULL));

    printf("Введите N \n");
    scanf_s("%d", &n);


    int* mass = new int[n];
    for (i = 0; i < n; i++)
    {
        mass[i] = rand() % 10;
        printf("%d ", mass[i]);
    }
    printf("\n");
    for (i = 1; i < n; i+=2)
    {
        printf("%d ", mass[i]);
    }
    printf("\n");
    if (n % 2 == 0) n--;
    for (i = n-1; i >= 0; i -= 2)
    {
        printf("%d ", mass[i]);
    }


    return 0;
}
