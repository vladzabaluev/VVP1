#include <stdio.h>
#include <math.h>
#include <locale.h>

float Fact2(int N)
{
    float Fact = 1, i = 2;
    if (N % 2 == 0) 
    {
        while (i <= N) 
        {
            Fact *= i;
            i += 2;
        }
    }
    else 
    {
        i = 3;
        while (i <= N)
        {
            Fact *= i;
            i += 2;
        }
    }
    return(Fact);
}
int main()
{
    setlocale(LC_ALL, "Rus");
    int a;
    
    printf("Введите x \n");
    scanf_s("%d", &a);
    
    printf("%lf", Fact2(a));

    return 0;
}
