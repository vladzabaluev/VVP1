#include <stdio.h>
#include <math.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");
    int a, b, c;

    printf("Введите стороны треугольника \n");
    scanf_s("%d", &a);
    scanf_s("%d", &b);
    scanf_s("%d", &c);

    if ((a * a + b * b == c * c) || (c * c + b * b == a * a) || (a * a + c * c == b * b))
    {
        printf("Треугольник со сторонами a, b, c является прямоугольным");
    }
    else  printf("Треугольник со сторонами a, b, c NE является прямоугольным");

    return 0;
}
