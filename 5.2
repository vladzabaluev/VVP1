#include <stdio.h>
#include <math.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");
    int a, b, c, ac, bc;

    printf ("Введите координаты А\n");
    scanf_s("%d", &a);
    printf ("Введите координаты B\n");
    scanf_s("%d", &b);
    printf("Введите координаты C\n");
    scanf_s("%d", &c);

   
    ac = abs(b - a);
    bc = abs(c - b);

    printf(" %d\n", ac);
    printf(" %d\n", bc);
    printf(" %d\n", ac*bc);

    return 0;
}
