#include <stdio.h>
#include <math.h>
#include <locale.h>
#include <stdlib.h> 
#include <ctime> 

int main()
{
    setlocale(LC_ALL, "Rus");
    int n, i, j, lokmax;
    srand(time(NULL));

    printf("Введите N \n");
    scanf_s("%d", &n);

    int* mass = new int[n];
    for (i = 0; i < n; i++)
    {
        mass[i] = rand() % 10;
        printf("%d ", mass[i]);
    }
    printf("\n");
    if (n == 2)
    {
        if (mass[0] > mass[1]) 
        {
            lokmax = 0;
        }
    }
    if (n > 2) 
    {
        for (i = 1; i < n; i++)
        {
            if (mass[i] > mass[i + 1] && mass[i] > mass[i - 1])
            {
                lokmax = i;
            }

        }
    }
    if (mass[n - 1] > mass[n - 2]) 
    {
        lokmax = n - 1;
    }
    printf("%d", lokmax);

    
    return 0;
}
