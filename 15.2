#include <stdio.h>
#include <math.h>
#include <locale.h>

int Sign(float a)
{
    int x;
    if (a < 0)
    {
        x = -1;
    }
    else if (a > 0)
    {
        x = 1;
    }
    else x = 0;

    return(x);
}
int main()
{
    setlocale(LC_ALL, "Rus");
    float a, b; int res;

    printf("Введите А\n");
    scanf_s("%f", &a);
    printf("Введите B\n");
    scanf_s("%f", &b);

    res = Sign(a) + Sign(b);
    printf("%d", res);

    return 0;
}
