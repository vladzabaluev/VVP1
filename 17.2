#include <stdio.h>
#include <math.h>
#include <locale.h>


int main()
{
    setlocale(LC_ALL, "Rus");
    int n, i, j=0, razn, a;

    printf("Введите N \n");
    scanf_s("%d", &n);

    int* mass = new int[n];
    for (i = 0; i < n; i++)
    {
        printf("Введите элемент массива \n");
        scanf_s("%d", &a);
        mass[i] = a;
    }
    printf("\n");
    razn = mass[1] - mass[0];
    for (i = 0;i < n-1; i++) 
    {
        if(mass[i + 1] == mass[i] + razn )  j++;
    }
    if (j == n-1) printf("%d", razn);
    else printf("0");

    return 0;

}
